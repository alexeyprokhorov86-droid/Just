# =============================================================================
# TELEGRAM BOT CONFIGURATION
# =============================================================================
# Получить BOT_TOKEN можно у @BotFather в Telegram
BOT_TOKEN=your_bot_token_here

# Ваш Telegram ID (получить можно у @userinfobot)
ADMIN_USER_ID=your_telegram_id_here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=knowledge_base
DB_USER=knowledge
DB_PASSWORD=your_database_password_here

# Docker контейнер БД (если используется)
DB_CONTAINER=knowledge_db

# =============================================================================
# AI API KEYS
# =============================================================================
# Claude API key (получить на https://console.anthropic.com/)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# RouterAI API key (для Gemini и Perplexity)
ROUTERAI_API_KEY=your_routerai_api_key_here
ROUTERAI_BASE_URL=https://routerai.ru/api/v1

# Прокси для Claude (если нужен)
# PROXY_URL=http://proxy.example.com:8080

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
# Директория для бэкапов (по умолчанию: ./backups)
# BACKUP_DIR=/path/to/backups

# Сколько дней хранить бэкапы
BACKUP_DAYS_TO_KEEP=7

# =============================================================================
# WATCHDOG CONFIGURATION
# =============================================================================
# Файлы для watchdog (по умолчанию: в директории скрипта)
# WATCHDOG_STATE_FILE=/path/to/watchdog_state.txt
# WATCHDOG_LOG_FILE=/path/to/watchdog.log
